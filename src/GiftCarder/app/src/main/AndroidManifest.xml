<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.smaccr.giftcarder" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <uses-sdk android:minSdkVersion="11" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme2" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Register" >
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:label="User Profile" >
        </activity>
        <activity
            android:name=".AllActivity"
            android:label="GiftCarder" >
        </activity>
        <activity
            android:name=".ItemActivity"
            android:label="Item" >
        </activity>
        <activity
            android:name=".FriendsActivity"
            android:label="@string/title_activity_friends" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" >
        </activity>
        <activity
            android:name=".InvDetailsActivity"
            android:label="@string/title_activity_inv_details" >
        </activity>
        <activity
            android:name=".BrowseActivity"
            android:label="Browse" >
        </activity>
        <activity
            android:name=".TradeRequestActivity"
            android:label="@string/title_activity_trade_request" >
        </activity>
        <activity
            android:name=".AcceptTradeActivity"
            android:label="@string/title_activity_accept_trade" >
        </activity>
        <activity
            android:name=".ProposeCounterTradeActivity"
            android:label="@string/title_activity_propose_counter_trade" >
        </activity>
        <activity
            android:name=".CreateTradeOfferActivity"
            android:label="@string/title_activity_create_trade_offer" >
        </activity>
        <activity
            android:name=".InventoryActivity"
            android:label="@string/title_activity_inventory" >
        </activity>
        <activity
            android:name=".ItemPictureActivity"
            android:label="Images" >
        </activity>
        <activity
            android:name=".ItemDetailsActivity"
            android:label="@string/title_activity_item_details" >
        </activity>


    </application>

</manifest>
