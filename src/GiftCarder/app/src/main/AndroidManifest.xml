<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.smaccr.giftcarder" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotiFullActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".TradeRequestActivity"
            android:label="@string/title_activity_trade_request" >
        </activity>
        <activity
            android:name=".AcceptTradeActivity"
            android:label="@string/title_activity_accept_trade" >
        </activity>
        <activity
            android:name=".ProposeCounterTradeActivity"
            android:label="@string/title_activity_propose_counter_trade" >
        </activity>
        <activity
            android:name=".CurrentTradesActivity"
            android:label="@string/title_activity_current_trades" >
        </activity>
    </application>

</manifest>
