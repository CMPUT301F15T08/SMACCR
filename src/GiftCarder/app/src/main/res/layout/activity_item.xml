<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="224dp"
                    android:layout_height="224dp"
                    android:id="@+id/ID_pictureOfGiftCard"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/card_icon"
                    android:onClick="takeGiftCardPic" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Make Offer"
                    android:id="@+id/ID_MakeOfferButton"
                    android:layout_gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ID_pictureOfGiftCard"
                    android:background="#ff9600"
                    android:textSize="20dp"
                    android:visibility="gone"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="View as Public"
                    android:id="@+id/ID_viewStatus"
                    android:layout_gravity="right"
                    android:background="#00d4ff"
                    android:textSize="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/ID_pictureOfGiftCard"
                    android:onClick="setViewStatus" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Value"
                android:background="#938f90"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="left"
                />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="330dp"
                    android:layout_height="70dp"
                    android:background="#fdfff8"
                    android:hint="Input Giftcard value"
                    android:textSize="20sp"
                    android:id="@+id/ID_item_value"
                    android:lines="1"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/editText" />
                <TextView
                    android:layout_width="24dp"
                    android:layout_height="70dp"
                    android:background="#fdfff8"
                    android:text = "$"
                    android:textSize="40dp"
                    android:textColor="#2bff00"
                    android:id="@+id/editText"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:background="#938f90"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="left"
                />

            <EditText
                android:layout_width="367dp"
                android:layout_height="70dp"
                android:background="#fdfff8"
                android:hint="Merchant"
                android:textSize="20sp"
                android:id="@+id/ID_item_Name"
                android:lines="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gift Card&apos;s Category"
                android:background="#938f90"
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="left"
                 />

            <TextView
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:background="#fdfff8"
                android:text="Select a category"
                android:textSize="20dp"
                android:visibility="gone"/>

            <Spinner
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:id="@+id/ID_categorySpin"
                android:entries="@array/Category"
                android:spinnerMode="dialog"
                android:textSize="30dp"></Spinner>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity of Gift Cards"
                android:background="#938f90"
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="left"
                />

            <EditText
                android:layout_width="367dp"
                android:layout_height="70dp"
                android:background="#fdfff8"
                android:hint="Enter ex)2"
                android:textSize="20dp"
                android:id="@+id/ID_quantity"
                android:lines="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gift Card Quality"
                android:background="#938f90"
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="left"
                />

            <TextView
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:background="#fdfff8"
                android:text="Select a quality"
                android:textSize="20dp"
                android:visibility="gone"/>

            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/ID_qualitySpin"
                android:entries="@array/Quality"
                android:spinnerMode="dialog"
                android:textSize="30dp"></Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Optional Comments"
                android:background="#938f90"
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="left"/>

            <EditText
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:background="#fdfff8"
                android:hint= "Ex)My giftcard is cool :D"
                android:textSize="20dp"
                android:id ="@+id/ID_comments"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make Public (allow others to see this gift card)"
                android:background="#938f90"
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="left"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ID_checkbox"
                android:checked="false" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SAVE Gift Card INFO"
                android:id="@+id/ID_savegiftcard"
                android:layout_gravity="right"
                android:background="#ffb700"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:onClick="saveGiftCardInfo"
                android:visibility="visible"/>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
